<Window x:Class="app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Character Creation" Height="800" Width="800">

    <!--#region Styles-->
    <Window.Resources>
        <Style TargetType="TextBlock" >
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
        
        <Style TargetType="Button">            
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
        
        <Style TargetType="ComboBoxItem">
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
    </Window.Resources>
    <!--#endregion-->
    
    <Border Background="LightGray"  Padding="10">

        <Grid>
            <!--#region Grid Definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
               
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Box 1 Race and Class-->
            <Border Margin="2,2,2,2" Background="Gray">
                <Grid Grid.Row="0" Grid.Column="0">
                    
                    <!--#region Grid Definitions-->
                    <Grid Margin="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    <!--#endregion-->
                        
                        <!--#region Race and Class Selection-->
                        <StackPanel Margin="2" Grid.Row="0">

                            <TextBlock FontWeight="Bold" Text="Race and class" Margin="2,2,2,15"/>

                            <!--Rcae-->
                            <TextBlock Text="Race" />
                            <ComboBox SelectedIndex="0" x:Name="RaceDropdown"  SelectionChanged="RaceDropdown_RaceChanged">
                                <ComboBoxItem x:Name="HumanRaceInfo" Content="The Humans"/>
                                <ComboBoxItem x:Name="InsectoidRaceInfo" Content="The insectoids" />
                                <ComboBoxItem x:Name="LizardfolkRaceInfo" Content="The Lizardfolk" />
                                <ComboBoxItem x:Name="CanidaesRaceInfo" Content="The Canidaes" />
                            </ComboBox>
                            
                            <!--Class-->
                            <TextBlock Text="Class" />
                            <ComboBox SelectedIndex="0" x:Name="ClassDropdown"  SelectionChanged="ClassDropdown_ClassChanged">
                                <ComboBoxItem x:Name="DivineBrawlerInfo" Content="Divine Brawler"/>
                                <ComboBoxItem x:Name="BattleMageInfo" Content="Battle Mage" />
                                <ComboBoxItem x:Name="ShieldkightInfo" Content="Shield Knight" />
                                <ComboBoxItem x:Name="PowerDruidInfo" Content="Power Druid" />
                            </ComboBox>
                        </StackPanel>
                        <!--#endregion-->
                        
                        <!--#region Info Boxes-->
                        <TextBox Text="Stat Bonuses" Grid.Row="1" x:Name="BonusInfoDisplay" Background="LightGray"  IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                        
                        <!--Displays the race info-->
                        <TextBox Text="race"  x:Name="RaceInfoDisplay" Background="LightGray" IsReadOnly="True" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                        
                        <!--Displays the class info-->
                        <TextBox Text="Class" x:Name="ClassInfoDisplay" Background="LightGray"  IsReadOnly="True" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                        
                        <!--#endregion-->
                    </Grid>
                </Grid>
            </Border>
            <!--#endregion-->

            <!--#region Box 2 Player details-->
            <Border Background="Gray" Margin="2" Grid.Column="1">
                <StackPanel>
                    <!--#region Enter Name Age-->
                    <Grid>
                        <!--#region Grid Definitions-->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                        <!--#endregion-->
                        
                        <!--#region Enter Name or clear text box-->
                            <TextBlock Text="Character Name" Grid.Column="0" />
                            <TextBox Text="Enter Name!" x:Name="NameTextBox" MaxLength="15" Grid.Column="1" />
                            <Button Content="Clear" Click="ClearNameButton_Click" Grid.Column="2" />
                            <!--#endregion -->
                        
                        <!--#region Enter Age or clear text box-->
                        <TextBlock Text="Character age" Grid.Column="0" Grid.Row="1" />
                        <TextBox Text="Enter Age!" x:Name="AgeTextBox" MaxLength="15" Grid.Column="1" Grid.Row="1" />
                        <Button Content="Clear" Click="ClearAgeButton_Click" Grid.Column="2" Grid.Row="1" />
                        <!--#endregion -->
                    </Grid>
                    <!--#endregion-->
                    
                    <!--#region Enter Description-->
                    <Grid>
                        <!--#region 4x2 Grid Description-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <!--#endregion-->
                        
                        <!--#region -->
                        <TextBlock TextWrapping="Wrap" Text="Eye Color"/>
                        <ComboBox SelectedIndex="0" x:Name="EyeColourDropDown" Grid.Column="1"/>

                        <TextBlock TextWrapping="Wrap" Text="Skin color?" Grid.Column="2"/>
                        <TextBlock TextWrapping="Wrap" Text="Build" Grid.Row="1"/>
                        <TextBlock TextWrapping="Wrap" Text="Hair color" Grid.Row="1" Grid.Column="2"/>
                    </Grid>
                    <!--#endregion-->

                </StackPanel>
            </Border>
            <!--#endregion-->
        </Grid>
    </Border>
    
</Window>
