<Window x:Class="app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Character Creation" Height="800" Width="800">
    
    <!--#region Styles-->
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
        <Style TargetType="ComboBoxItem">
            <Setter Property="FontFamily" Value="century gothic" />
            <Setter Property="Margin" Value="2" />
        </Style>
    </Window.Resources>
    <!--#endregion-->    

    <Border Padding="10">

        <Grid>
        <!--#region Grid Definitions-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="*"/>
                <ColumnDefinition  Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
        <!--#endregion-->            
            
            <!--#region Box 1 Race and Class -->
            
            <!--Box 1-->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--Box 1 left-->
                <StackPanel Margin="2" Grid.Row="0">

                    <!--Race and Class-->
                    <TextBlock FontWeight="Bold" Text="Race and class"/>

                    <!--Rcae-->
                    <TextBlock Text="Race" />
                    <ComboBox SelectedIndex="0" x:Name="RaceDropdown"  SelectionChanged="RaceDropdown_RaceChanged">
                        <ComboBoxItem x:Name="HumanRaceInfo" Content="The Humans"/>
                        <ComboBoxItem x:Name="InsectoidRaceInfo" Content="The insectoids" />
                        <ComboBoxItem x:Name="LizardfolkRaceInfo" Content="The Lizardfolk" />
                        <ComboBoxItem x:Name="CanidaesRaceInfo" Content="The Canidaes" />
                    </ComboBox>
                    <!--Class-->
                    <TextBlock Text="Class" />
                    <ComboBox SelectedIndex="0" x:Name="ClassDropdown"  SelectionChanged="ClassDropdown_ClassChanged">
                        <ComboBoxItem x:Name="DivineBrawlerInfo" Content="Divine Brawler"/>
                        <ComboBoxItem x:Name="BattleMageInfo" Content="Battle Mage" />
                        <ComboBoxItem x:Name="ShieldkightInfo" Content="Shield Knight" />
                        <ComboBoxItem x:Name="PowerDruidInfo" Content="Power Druid" />
                    </ComboBox>
                </StackPanel>

                <!--Box 1 right-->
                <Grid Margin="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!--Displays the race info-->
                    <TextBox Text="race"  x:Name="RaceInfoDisplay" Background="LightGray" IsReadOnly="True" Grid.Row="0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                    <!--Displays the class info-->
                    <TextBox Text="Class" x:Name="ClassInfoDisplay" Background="LightGray"  IsReadOnly="True" Grid.Row="2" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
                </Grid>
            </Grid>
            <!--#endregion-->
        
            <!--#region Box 2 Player details-->
            <StackPanel Grid.Column="1">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Character Name" Grid.Column="0" />
                        <TextBox Text="Enter Name!" x:Name="NameTextBox" MaxLength="15" Grid.Column="1" />
                        <Button Content="Clear" Click="ClearNameButton_Click" Grid.Column="2" />
                    </Grid>
                </StackPanel>
            </StackPanel>
            
            <!--#endregion-->
        </Grid>
    </Border>
</Window>
